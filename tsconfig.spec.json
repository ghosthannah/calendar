/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine"],
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@state/*": ["src/app/state/*"],
      "@services/*": ["src/shared/services/*"],
      "@models/*": ["src/app/models/*"],
      "@server/*": ["server/*"]
    }
  },
  "files": ["src/test.ts", "src/polyfills.ts"],
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
